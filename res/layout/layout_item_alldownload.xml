<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/iv_alldown_appicon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:src="@drawable/default_app_icon" />

    <TextView
        android:id="@+id/tv_alldown_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_alldown_appicon"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="网易音乐" />

    <TextView
        android:id="@+id/tv_alldown_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_alldown_appname"
        android:textSize="16dp"
        android:text="(13.3MB)" />

    <CheckBox
        android:id="@+id/cb_alldown_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        style="@style/CustomCheckboxTheme"
        android:layout_centerVertical="true"/>

</RelativeLayout>
