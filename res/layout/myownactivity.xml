<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black2"
    android:orientation="vertical" >

    <include
        android:id="@+id/layout_bar"
        layout="@layout/layout_title" />

   
    <RelativeLayout
        android:id="@+id/person_touxiang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:onClick="onclickPersonInfo"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:paddingLeft="16dp"
            android:text="头像"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <com.personlife.widget.CircleImageView
            android:id="@+id/touxiangpicture"
            android:layout_width="60.0dp"
            android:layout_height="60.0dp"
            android:layout_toLeftOf="@+id/youjiantou"
            android:src="@drawable/head" />

        <ImageView
            android:id="@+id/youjiantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/right1" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/person_nicheng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:onClick="onclickPersonInfo"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:paddingLeft="16dp"
            android:text="昵称"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pernicheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/youjiantou1"
            android:text="昵称"
            android:textColor="@color/black1" />

        <ImageView
            android:id="@+id/youjiantou1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/right1" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/person_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:onClick="onclickPersonInfo"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:paddingLeft="16dp"
            android:text="性别"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/persex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/youjiantou2"
            android:text="性别"
            android:textColor="@color/black1" />

        <ImageView
            android:id="@+id/youjiantou2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/right1" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/person_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:onClick="onclickPersonInfo"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:paddingLeft="16dp"
            android:text="地区"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/perarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/youjiantou3"
            android:text="地区"
            android:textColor="@color/black1" />

        <ImageView
            android:id="@+id/youjiantou3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/right1" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/person_zhiye"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:onClick="onclickPersonInfo"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:paddingLeft="16dp"
            android:text="职业"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/perzhiye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/youjiantou4"
            android:text="职业"
            android:textColor="@color/black1" />

        <ImageView
            android:id="@+id/youjiantou4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/right1" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/person_interesting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:onClick="onclickPersonInfo"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:paddingLeft="16dp"
            android:text="兴趣爱好"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/personinteresting"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/youjiantou5"
            android:text="兴趣爱好"
            android:gravity="right"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/black1" />

        <ImageView
            android:id="@+id/youjiantou5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/right1" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/person_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:onClick="onclickPersonInfo"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:paddingLeft="16dp"
            android:text="个性签名"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/personsign"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/youjiantou6"
            android:gravity="right"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="我的个性签名"
            android:textColor="@color/black1" />

        <ImageView
            android:id="@+id/youjiantou6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/right1" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:background="@color/black2" />

    <Button
        android:id="@+id/login_out"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/red"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>