<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <com.personlife.widget.CircleImageView
            android:id="@+id/iv_shuoshuo_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/touxiang" />

        <TextView
            android:id="@+id/tv_shuoshuo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_shuoshuo_icon"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iv_shuoshuo_icon"
            android:text="小王子与玫瑰"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_shuoshuo_beforetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_shuoshuo_name"
            android:layout_below="@+id/tv_shuoshuo_name"
            android:text="12分钟前"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_shuoshuo_status"
            android:layout_width="40dp"
            android:layout_height="18dp"
            android:layout_alignLeft="@+id/iv_shuoshuo_icon"
            android:layout_below="@+id/iv_shuoshuo_icon"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/backgroud_download"
            android:gravity="center"
            android:text="分享"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_shuoshuo_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_shuoshuo_status"
            android:layout_alignBottom="@+id/tv_shuoshuo_status"
            android:layout_alignLeft="@+id/tv_shuoshuo_status"
            android:text="           我今天收藏了一些app，感觉还不错哦~"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <com.personlife.widget.HorizontialListView
            android:id="@+id/hlv_shuoshuo_apps"
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:layout_alignLeft="@+id/tv_shuoshuo_content"
            android:layout_below="@+id/tv_shuoshuo_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/fenxiangbg" >
        </com.personlife.widget.HorizontialListView>

        <ImageView
            android:id="@+id/iv_shuoshuo_more"
            android:layout_width="20dp"
            android:layout_height="82dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_shuoshuo_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/appchakangengduo"
            android:src="@drawable/appchakan" />

        <ImageView
            android:id="@+id/iv_shuoshuo_pinglun"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/hlv_shuoshuo_apps"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_share_button"
            android:scaleType="center"
            android:src="@drawable/pinglun1" />

        <ImageView
            android:id="@+id/iv_shuoshuo_dianzan"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_below="@+id/hlv_shuoshuo_apps"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/iv_shuoshuo_pinglun"
            android:background="@drawable/bg_share_button"
            android:scaleType="center"
            android:src="@drawable/dianzan1" />
    </RelativeLayout>

</LinearLayout>