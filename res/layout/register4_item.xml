<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.personlife.widget.CircleImageView
        android:id="@+id/register4_grid_staricon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/default_backgroud"
        android:scaleType="center" />
    

    <TextView
        android:id="@+id/register4_grid_starname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_grid_staricon"
        android:layout_centerHorizontal="true"
        android:text="李宇春的APP"
        android:textSize="16dp" />

</RelativeLayout>